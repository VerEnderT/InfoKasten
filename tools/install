# grundlage
sudo apt install python3-pip -y

# gui tkinter und Qt5
sudo apt install python3-tk -y
sudo apt install python3-pyqt5 -y

# 
sudo apt install libnfs-dev -y
sudo pip3 install libnfs

# systemdaten abfrage
sudo apt install acpi -y
sudo apt install lshw -y

# soundabfrage
sudo apt install python3-pyqt5.qtmultimedia -y
sudo apt install python3-pyaudio -y
sudo apt install libqt5multimedia5-plugins -y
sudo apt install alsa -y


# helligkeits einstellung
sudo apt install brightnessctl -y

# berechnung miclevel
sudo pip3 install numpy

# camera 
sudo apt install libopencv-dev python3-opencv -y
sudo apt-get install python3-pil.imagetk -y
